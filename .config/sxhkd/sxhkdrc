#rofi
alt + F2
	rofi -show drun -lines 10 -width 40

super + w
	rofi -show window -width 80

#terminal
alt + t
	uxterm

#file manager
super + e
	pcmanfm

#Screenshot
Print
	flameshot gui

#Email client
XF86Mail
	thunderbird

#Power menu
alt + ctrl + Delete
	$HOME/.scripts/power.sh

# Raise Volume
XF86AudioRaiseVolume
        $HOME/.scripts/volume/volume.sh up

# Lower Volume
XF86AudioLowerVolume
        $HOME/.scripts/volume/volume.sh down

# Mute Volume
XF86AudioMute
        $HOME/.scripts/volume/volume.sh mute
	
